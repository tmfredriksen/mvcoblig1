@model IEnumerable<Blogg.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.commentParentID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Post.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Post.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID, parentID = ViewBag.commentParentID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID, ViewBag.commentParentID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID, ViewBag.commentParentID })
        </td>
    </tr>
}

    

</table>

<div>
    @Html.ActionLink("Tilbake til innlegget", "Index", "Blog")
</div>
